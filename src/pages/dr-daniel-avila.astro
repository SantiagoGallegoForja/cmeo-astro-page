---
import PageLayout from '../layouts/PageLayout.astro';
import FloatingContactWidget from '../components/forms/FloatingContactWidget.astro';

const credentials = [
  { title: 'Medico y cirujano', institution: 'Pontificia Universidad Javeriana', year: '' },
  { title: 'Especialista en Oftalmologia', institution: 'Universidad Militar Nueva Granada', year: '' },
  { title: 'Especialista en Gerencia Hospitalaria', institution: 'Pontificia Universidad Javeriana', year: '' }
];

const services = [
  { name: 'Valoracion Oftalmologica', icon: 'M15 12a3 3 0 11-6 0 3 3 0 016 0z M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z' },
  { name: 'Cirugia de Catarata', icon: 'M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z' },
  { name: 'Cirugia Refractiva', icon: 'M13 10V3L4 14h7v7l9-11h-7z' },
  { name: 'Pruebas Diagnosticas', icon: 'M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4' },
  { name: 'Urgencia Oftalmologica', icon: 'M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z' },
  { name: 'Tratamiento de Glaucoma', icon: 'M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z' },
];

const stats = [
  { number: '10+', label: 'Anos de experiencia' },
  { number: '2,000+', label: 'Pacientes atendidos' },
  { number: '500+', label: 'Cirugias realizadas' },
];
---

<PageLayout title="Dr. Edgar Daniel Avila" description="Perfil del Dr. Edgar Daniel Avila - Oftalmologo en CMEO Especialistas">

  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-brand-green-50 via-white to-brand-blue-50 py-20 lg:py-28 px-4 sm:px-6 overflow-hidden">
    <!-- Decorative Elements -->
    <div class="absolute top-0 right-0 w-96 h-96 bg-brand-green-500/10 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 left-0 w-72 h-72 bg-brand-blue-500/10 rounded-full blur-3xl"></div>

    <div class="max-w-7xl mx-auto grid grid-cols-1 lg:grid-cols-2 gap-12 items-center relative">
      <!-- Photo -->
      <div class="flex justify-center order-2 lg:order-1">
        <div class="relative">
          <div class="absolute inset-0 bg-gradient-to-br from-brand-green-500/20 to-brand-blue-500/20 rounded-full blur-3xl scale-75"></div>
          <img
            src="https://darkviolet-chough-405570.hostingersite.com/wp-content/uploads/2025/09/edgar.png"
            alt="Dr. Edgar Daniel Avila"
            class="relative max-w-md w-full h-auto object-contain drop-shadow-2xl"
          />
        </div>
      </div>

      <!-- Doctor Info -->
      <div class="order-1 lg:order-2">
        <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-brand-green-100 border border-brand-green-200 text-brand-green-700 text-sm font-medium mb-6">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
          </svg>
          Oftalmologia
        </div>

        <h1 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-4">
          Dr. Edgar Daniel Avila
        </h1>
        <p class="text-xl text-gray-600 mb-8">
          Medico cirujano - Especialista en Oftalmologia
        </p>

        <!-- Quick Stats -->
        <div class="flex flex-wrap gap-6 mb-8">
          {stats.map((stat) => (
            <div class="text-center">
              <div class="text-2xl font-bold text-brand-green-600">{stat.number}</div>
              <div class="text-sm text-gray-500">{stat.label}</div>
            </div>
          ))}
        </div>

        <div class="flex flex-wrap gap-4">
          <a
            href="/contacto?especialidad=oftalmo"
            class="inline-flex items-center gap-2 px-8 py-4 bg-gradient-to-r from-brand-green-500 to-brand-green-600 text-white font-bold rounded-full shadow-green-glow hover:shadow-green-glow-lg hover:-translate-y-1 transition-all duration-300"
          >
            Agendar cita
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
          <a
            href="https://wa.me/573502217249"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 px-6 py-4 bg-white border-2 border-gray-200 text-gray-700 font-semibold rounded-full hover:border-brand-green-300 hover:shadow-soft transition-all duration-300"
          >
            <svg class="w-5 h-5 text-[#25D366]" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
            </svg>
            WhatsApp
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section class="relative bg-white py-20 lg:py-24 px-4 sm:px-6">
    <div class="max-w-6xl mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-start">
        <!-- Bio -->
        <div>
          <span class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-brand-blue-50 text-brand-blue-600 text-sm font-semibold mb-4">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
            Sobre mi
          </span>
          <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-6">
            Comprometido con tu salud visual
          </h2>
          <div class="space-y-4 text-gray-600 leading-relaxed">
            <p>
              Soy oftalmologo con mas de 10 anos de experiencia en el cuidado integral de la salud visual. Mi enfoque combina precision clinica con tecnologia de punta para diagnosticar y tratar diversas condiciones oculares.
            </p>
            <p>
              Desde errores refractivos hasta patologias complejas como glaucoma, catarata y enfermedades de la retina, me dedico a ofrecer atencion personalizada, priorizando la comodidad y bienestar de cada paciente.
            </p>
            <p>
              Mi objetivo es que cada paciente recupere o mejore su vision con los tratamientos mas avanzados y seguros disponibles.
            </p>
          </div>
        </div>

        <!-- Credentials -->
        <div>
          <span class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-brand-green-50 text-brand-green-600 text-sm font-semibold mb-4">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"/>
            </svg>
            Formacion academica
          </span>
          <h2 class="text-3xl font-bold text-gray-900 mb-6">
            Credenciales
          </h2>
          <div class="space-y-4">
            {credentials.map((cred, index) => (
              <div class="group flex items-start gap-4 bg-gradient-to-br from-gray-50 to-white rounded-2xl p-5 border border-gray-100 hover:shadow-soft transition-all duration-300">
                <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-brand-green-500 to-brand-green-600 flex items-center justify-center flex-shrink-0 shadow-green-glow group-hover:scale-110 transition-transform duration-300">
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                </div>
                <div>
                  <p class="font-semibold text-gray-900">{cred.title}</p>
                  <p class="text-gray-600 text-sm">{cred.institution}</p>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section class="relative bg-gradient-to-b from-gray-50 to-white py-20 lg:py-24 px-4 sm:px-6">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-12">
        <span class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-brand-green-100 text-brand-green-700 text-sm font-semibold mb-4">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"/>
          </svg>
          Servicios
        </span>
        <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">
          Servicios que ofrezco
        </h2>
        <p class="text-gray-600 max-w-2xl mx-auto">
          Atencion integral para el cuidado de tu salud visual con tecnologia de vanguardia.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {services.map((service, index) => (
          <div class="group bg-white rounded-2xl p-6 shadow-soft border border-gray-100 hover:shadow-soft-xl hover:-translate-y-1 transition-all duration-300">
            <div class:list={[
              'w-12 h-12 rounded-xl flex items-center justify-center mb-4 group-hover:scale-110 transition-transform duration-300',
              index % 3 === 0 ? 'bg-gradient-to-br from-brand-green-500 to-brand-green-600 shadow-green-glow' :
              index % 3 === 1 ? 'bg-gradient-to-br from-brand-blue-500 to-brand-blue-600 shadow-blue-glow' :
              'bg-gradient-to-br from-brand-pink-500 to-brand-pink-600 shadow-pink-glow'
            ]}>
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={service.icon}/>
              </svg>
            </div>
            <h3 class="font-bold text-gray-900">{service.name}</h3>
          </div>
        ))}
      </div>

      <div class="text-center mt-10">
        <a
          href="/oftalmologia"
          class="inline-flex items-center gap-2 px-6 py-3 bg-white border-2 border-gray-200 text-gray-700 font-semibold rounded-full hover:border-brand-green-300 hover:shadow-soft transition-all duration-300"
        >
          Ver todos los servicios de oftalmologia
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="relative overflow-hidden">
    <div class="bg-gradient-to-br from-brand-green-600 via-brand-green-500 to-brand-blue-600 py-20 px-4 sm:px-6">
      <div class="absolute inset-0 opacity-10">
        <div class="absolute inset-0" style="background-image: radial-gradient(circle at 2px 2px, white 1px, transparent 0); background-size: 32px 32px;"></div>
      </div>

      <div class="max-w-4xl mx-auto text-center relative z-10">
        <h2 class="text-3xl lg:text-4xl font-bold text-white mb-6">
          Â¿Listo para cuidar tu vision?
        </h2>
        <p class="text-xl text-white/90 mb-8 max-w-2xl mx-auto">
          Agenda tu cita hoy y da el primer paso hacia una mejor salud visual.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/contacto?especialidad=oftalmo"
            class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-white text-brand-green-600 font-bold rounded-full shadow-lg hover:shadow-xl hover:-translate-y-1 transition-all duration-300"
          >
            Agendar cita ahora
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
          </a>
          <a
            href="tel:+576068865077"
            class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-white/10 backdrop-blur-sm border-2 border-white/30 text-white font-bold rounded-full hover:bg-white/20 transition-all duration-300"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            Llamar ahora
          </a>
        </div>
      </div>
    </div>
  </section>

  <FloatingContactWidget
    doctorName="Dr. Daniel Avila"
    specialty="oftalmologia"
    specialtyValue="Oftalmologia"
  />

</PageLayout>
