---
import PageLayout from '../layouts/PageLayout.astro';
import HeroSlider from '../components/sections/HeroSlider.astro';
import SpecialtyCard from '../components/sections/SpecialtyCard.astro';
import DoctorCard from '../components/sections/DoctorCard.astro';
import CertificationCard from '../components/sections/CertificationCard.astro';

const stats = [
  { number: '8+', label: 'Anos de experiencia', icon: 'M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z' },
  { number: '1,200+', label: 'Pacientes atendidos', icon: 'M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z' },
  { number: '150+', label: 'Procedimientos', icon: 'M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z' },
  { number: '2', label: 'Especialidades', icon: 'M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z' },
];

const whyChooseUs = [
  { title: 'Diagnostico Preciso', description: 'Evaluaciones detalladas para encontrar la raiz del problema y tratarlo efectivamente.', icon: 'M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z' },
  { title: 'Atencion Rapida', description: 'Citas en menos de 48 horas. Tu salud no puede esperar.', icon: 'M13 10V3L4 14h7v7l9-11h-7z' },
  { title: 'Ubicacion Estrategica', description: 'En el corazon del Oriente Antioqueno, facil acceso desde cualquier municipio.', icon: 'M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z M15 11a3 3 0 11-6 0 3 3 0 016 0z' },
  { title: 'Equipo Especializado', description: 'Profesionales con anos de experiencia y formacion continua.', icon: 'M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z' },
  { title: 'Multiples Coberturas', description: 'Aceptamos Sura, Coomeva y consulta particular.', icon: 'M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z' },
  { title: 'Seguimiento Integral', description: 'Acompanamiento completo antes, durante y despues de tu tratamiento.', icon: 'M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4' },
];

const testimonials = [
  { name: 'Maria Fernanda G.', text: 'Excelente atencion del Dr. Avila. Mi cirugia de cataratas fue un exito total. Ahora veo perfectamente sin necesidad de gafas.', rating: 5, specialty: 'Oftalmologia' },
  { name: 'Carlos Alberto M.', text: 'La Dra. Carolina es muy profesional y amable. Me opero de rinoplastia y los resultados superaron mis expectativas.', rating: 5, specialty: 'Otorrinolaringologia' },
  { name: 'Ana Lucia P.', text: 'Llevé a mi hijo por problemas de audición y el trato fue excelente. Diagnostico rapido y tratamiento efectivo.', rating: 5, specialty: 'Otorrinolaringologia' },
  { name: 'Roberto Jose S.', text: 'Tenia miedo de operarme los ojos pero el equipo me dio total confianza. Procedimiento rapido y sin dolor.', rating: 5, specialty: 'Oftalmologia' },
];

const process = [
  { step: 1, title: 'Agenda tu cita', description: 'Llena el formulario o llamanos. Respondemos en menos de 24 horas.', icon: 'M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z' },
  { step: 2, title: 'Consulta inicial', description: 'Evaluacion completa con tecnologia de punta para un diagnostico preciso.', icon: 'M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2' },
  { step: 3, title: 'Plan de tratamiento', description: 'Te explicamos las opciones y creamos un plan personalizado para ti.', icon: 'M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z' },
  { step: 4, title: 'Recuperacion', description: 'Seguimiento continuo para garantizar los mejores resultados.', icon: 'M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z' },
];

const faqs = [
  { question: '¿Cuanto tiempo tarda en conseguir una cita?', answer: 'Normalmente podemos agendar tu cita en menos de 48 horas. Para urgencias, contamos con atencion prioritaria el mismo dia.' },
  { question: '¿Aceptan seguros medicos?', answer: 'Si, trabajamos con Poliza Sura y Seguros Coomeva. Tambien ofrecemos consulta particular con facilidades de pago.' },
  { question: '¿Las cirugias son ambulatorias?', answer: 'La mayoria de nuestros procedimientos son ambulatorios, lo que significa que puedes regresar a casa el mismo dia. Te daremos instrucciones detalladas de cuidado postoperatorio.' },
  { question: '¿Atienden ninos?', answer: 'Si, tanto en oftalmologia como en otorrinolaringologia atendemos pacientes de todas las edades, incluyendo ninos.' },
  { question: '¿Donde estan ubicados?', answer: 'Estamos ubicados en Rionegro, Antioquia, en el corazon del Oriente Antioqueno. Tenemos facil acceso desde todos los municipios cercanos.' },
];
---

<PageLayout title="Inicio" description="Centro Medico Especialistas del Oriente - Especialistas en oftalmologia y otorrinolaringologia en Rionegro, Antioquia">

  <!-- Hero Slider with Appointment Form -->
  <HeroSlider />

  <!-- Specialties Section -->
  <section class="grid grid-cols-1 md:grid-cols-2">
    <SpecialtyCard
      title="Otorrinolaringologia"
      description="Con nuestro servicio de otorrinolaringologia podras encontrar el abordaje de las patologias de oidos, nariz, garganta y laringe, intervenciones quirurgicas de funcionalidad, tratamientos cosmeticos y manejo de urgencias de la especialidad."
      icon="https://darkviolet-chough-405570.hostingersite.com/wp-content/uploads/2025/09/logoto.png"
      href="/otorrino"
      variant="pink"
    />
    <SpecialtyCard
      title="Oftalmologia"
      description="Con nuestro servicio de oftalmologia podras encontrar el abordaje de patologias oftalmologicas, procedimientos quirurgicos, atencion prioritaria y manejo de urgencias de la especialidad."
      icon="https://darkviolet-chough-405570.hostingersite.com/wp-content/uploads/2025/09/logoto2.png"
      href="/oftalmologia"
      variant="green"
    />
  </section>

  <!-- Stats Counter Section -->
  <section class="relative bg-white py-20 px-4 sm:px-6 overflow-hidden border-y border-gray-100">
    <div class="max-w-7xl mx-auto relative z-10">
      <div class="grid grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12">
        {stats.map((stat, index) => (
          <div class="text-center group">
            <div class:list={[
              'inline-flex items-center justify-center w-16 h-16 rounded-2xl mb-4 group-hover:scale-110 transition-all duration-300',
              index % 4 === 0 ? 'bg-brand-green-100' :
              index % 4 === 1 ? 'bg-brand-pink-100' :
              index % 4 === 2 ? 'bg-brand-blue-100' :
              'bg-brand-green-100'
            ]}>
              <svg class:list={[
                'w-8 h-8',
                index % 4 === 0 ? 'text-brand-green-600' :
                index % 4 === 1 ? 'text-brand-pink-600' :
                index % 4 === 2 ? 'text-brand-blue-600' :
                'text-brand-green-600'
              ]} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={stat.icon}/>
              </svg>
            </div>
            <div class:list={[
              'text-4xl lg:text-5xl font-bold mb-2',
              index % 4 === 0 ? 'text-brand-green-600' :
              index % 4 === 1 ? 'text-brand-pink-600' :
              index % 4 === 2 ? 'text-brand-blue-600' :
              'text-brand-green-600'
            ]} data-counter>{stat.number}</div>
            <div class="text-gray-600 font-medium">{stat.label}</div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Why Choose Us Section -->
  <section class="relative bg-gradient-to-b from-gray-50 to-white py-24 lg:py-32 px-4 sm:px-6 overflow-hidden">
    <div class="absolute top-0 right-0 w-96 h-96 bg-brand-green-500/5 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 left-0 w-72 h-72 bg-brand-pink-500/5 rounded-full blur-3xl"></div>

    <div class="max-w-7xl mx-auto relative z-10">
      <div class="text-center mb-16">
        <span class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-brand-blue-50 text-brand-blue-600 text-sm font-semibold mb-4">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/>
          </svg>
          Por que elegirnos
        </span>
        <h2 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-4">
          Tu salud en las mejores manos
        </h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Combinamos experiencia, tecnologia y atencion humana para brindarte el mejor cuidado.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {whyChooseUs.map((item, index) => (
          <div class="group bg-gradient-to-br from-gray-50 to-white rounded-3xl p-8 border border-gray-100 hover:shadow-soft-xl hover:-translate-y-2 transition-all duration-500">
            <div class:list={[
              'w-14 h-14 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300',
              index % 3 === 0 ? 'bg-gradient-to-br from-brand-green-500 to-brand-green-600 shadow-green-glow' :
              index % 3 === 1 ? 'bg-gradient-to-br from-brand-pink-500 to-brand-pink-600 shadow-pink-glow' :
              'bg-gradient-to-br from-brand-blue-500 to-brand-blue-600 shadow-blue-glow'
            ]}>
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={item.icon}/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-3">{item.title}</h3>
            <p class="text-gray-600 leading-relaxed">{item.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Specialists Section -->
  <section class="relative bg-gradient-to-br from-white via-gray-50 to-brand-green-50/30 py-24 lg:py-32 px-4 sm:px-6 overflow-hidden" id="especialistas">
    <!-- Decorative elements -->
    <div class="absolute top-20 left-10 w-72 h-72 bg-brand-green-500/5 rounded-full blur-3xl"></div>
    <div class="absolute bottom-20 right-10 w-80 h-80 bg-brand-pink-500/5 rounded-full blur-3xl"></div>

    <div class="max-w-7xl mx-auto relative z-10">
      <div class="text-center mb-16">
        <span class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-brand-green-100 text-brand-green-700 text-sm font-semibold mb-4">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
          </svg>
          Equipo medico
        </span>
        <h2 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-4">
          Nuestros especialistas
        </h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Profesionales altamente calificados comprometidos con tu bienestar y salud.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 lg:gap-12 max-w-5xl mx-auto">
        <DoctorCard
          name="Dra. Carolina Campuzano"
          specialty="Otorrinolaringologa"
          image="https://darkviolet-chough-405570.hostingersite.com/wp-content/uploads/2025/09/carolina.png"
          specialtyUrl="/dra-carolina-campuzano"
          appointmentUrl="/contacto?especialidad=otorrino"
          accentColor="pink"
        />
        <DoctorCard
          name="Dr. Edgar Daniel Avila"
          specialty="Oftalmologo"
          image="https://darkviolet-chough-405570.hostingersite.com/wp-content/uploads/2025/09/edgar.png"
          specialtyUrl="/dr-daniel-avila"
          appointmentUrl="/contacto?especialidad=oftalmo"
          accentColor="green"
        />
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <section class="relative bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 py-24 lg:py-32 px-4 sm:px-6 overflow-hidden">
    <!-- Decorative elements -->
    <div class="absolute top-0 left-0 w-96 h-96 bg-brand-green-500/10 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 right-0 w-72 h-72 bg-brand-pink-500/10 rounded-full blur-3xl"></div>

    <div class="max-w-7xl mx-auto relative z-10">
      <div class="text-center mb-16">
        <span class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/10 backdrop-blur-sm border border-white/10 text-white/90 text-sm font-semibold mb-4">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
          </svg>
          Testimonios
        </span>
        <h2 class="text-4xl lg:text-5xl font-bold text-white mb-4">
          Lo que dicen nuestros pacientes
        </h2>
        <p class="text-lg text-gray-400 max-w-2xl mx-auto">
          Miles de pacientes satisfechos respaldan nuestra calidad y compromiso.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6" id="testimonials-grid">
        {testimonials.map((testimonial, index) => (
          <div class="group bg-white/5 backdrop-blur-sm rounded-3xl p-6 border border-white/10 hover:bg-white/10 hover:border-white/20 transition-all duration-300">
            <!-- Stars -->
            <div class="flex gap-1 mb-4">
              {[...Array(testimonial.rating)].map(() => (
                <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                </svg>
              ))}
            </div>
            <!-- Quote -->
            <p class="text-gray-300 leading-relaxed mb-6 text-sm">"{testimonial.text}"</p>
            <!-- Author -->
            <div class="flex items-center gap-3">
              <div class:list={[
                'w-10 h-10 rounded-full flex items-center justify-center text-white font-bold text-sm',
                index % 2 === 0 ? 'bg-gradient-to-br from-brand-green-500 to-brand-green-600' : 'bg-gradient-to-br from-brand-pink-500 to-brand-pink-600'
              ]}>
                {testimonial.name.charAt(0)}
              </div>
              <div>
                <p class="text-white font-semibold text-sm">{testimonial.name}</p>
                <p class="text-gray-500 text-xs">{testimonial.specialty}</p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Process Section -->
  <section class="relative bg-white py-24 lg:py-32 px-4 sm:px-6 overflow-hidden">
    <div class="absolute inset-0 opacity-[0.02]">
      <div class="absolute inset-0" style="background-image: radial-gradient(circle at 2px 2px, currentColor 1px, transparent 0); background-size: 40px 40px;"></div>
    </div>

    <div class="max-w-6xl mx-auto relative z-10">
      <div class="text-center mb-16">
        <span class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-brand-green-100 text-brand-green-700 text-sm font-semibold mb-4">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
          </svg>
          Proceso simple
        </span>
        <h2 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-4">
          ¿Como funciona?
        </h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          En 4 sencillos pasos estaras en camino a mejorar tu salud.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {process.map((item, index) => (
          <div class="relative group">
            <!-- Connector line -->
            {index < process.length - 1 && (
              <div class="hidden lg:block absolute top-10 left-[60%] w-full h-0.5 bg-gradient-to-r from-brand-green-300 to-brand-green-100"></div>
            )}
            <div class="relative bg-white rounded-3xl p-8 shadow-soft border border-gray-100 hover:shadow-soft-xl hover:-translate-y-2 transition-all duration-500 text-center">
              <!-- Step number -->
              <div class="absolute -top-4 left-1/2 -translate-x-1/2 w-8 h-8 rounded-full bg-gradient-to-br from-brand-green-500 to-brand-green-600 text-white font-bold text-sm flex items-center justify-center shadow-green-glow">
                {item.step}
              </div>
              <!-- Icon -->
              <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-brand-green-50 to-brand-green-100 flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300">
                <svg class="w-8 h-8 text-brand-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={item.icon}/>
                </svg>
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-3">{item.title}</h3>
              <p class="text-gray-600 text-sm leading-relaxed">{item.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Certifications Section -->
  <section class="relative bg-gradient-to-br from-gray-50 to-white py-24 lg:py-32 px-4 sm:px-6 overflow-hidden">
    <div class="max-w-4xl mx-auto text-center relative z-10">
      <span class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-brand-green-100 text-brand-green-700 text-sm font-semibold mb-4">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"/>
        </svg>
        Respaldo profesional
      </span>
      <h2 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-4">
        Certificaciones profesionales
      </h2>
      <p class="text-lg text-gray-600 mb-12 max-w-2xl mx-auto">
        Nuestros especialistas cuentan con avales oficiales que respaldan su formacion y experiencia.
      </p>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <CertificationCard
          title="Otorrinolaringologia"
          image="https://darkviolet-chough-405570.hostingersite.com/wp-content/uploads/2025/09/certificado-otorrino.png"
          iconColor="green"
        />
        <CertificationCard
          title="Oftalmologia"
          image="https://darkviolet-chough-405570.hostingersite.com/wp-content/uploads/2025/09/certificado-oftalmo.png"
          iconColor="teal"
        />
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
