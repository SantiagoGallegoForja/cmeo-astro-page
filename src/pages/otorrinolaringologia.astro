---
import PageLayout from '../layouts/PageLayout.astro';

const services = [
  { title: 'Consulta particular de otorrinolaringología', icon: 'M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2', href: '/otorrino' },
  { title: 'Nasofibrolaringoscopía', icon: 'M15 12a3 3 0 11-6 0 3 3 0 016 0z M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z', href: '/nasofibrolaringoscopia' },
  { title: 'Estroboscopía laríngea', icon: 'M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z', href: '/otorrino' },
  { title: 'Rinoplastia funcional y estética', icon: 'M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z', href: '/rinoplastia' },
  { title: 'Cirugía de oído', icon: 'M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z', href: '/otorrino' },
  { title: 'Tratamiento de patologías de la voz', icon: 'M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z', href: '/otorrino' },
];
---

<PageLayout title="Otorrinolaringología" description="Servicios de otorrinolaringología en CMEO Especialistas">

  <!-- Hero Section with Image -->
  <section class="relative min-h-[50vh] flex items-end overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0">
      <img
        src="https://darkviolet-chough-405570.hostingersite.com/wp-content/uploads/2025/09/servicesSlider.jpg"
        alt="Otorrinolaringologia"
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/40 to-transparent"></div>
    </div>

    <!-- Hero Content -->
    <div class="relative z-10 w-full pb-12 pt-32 px-4 sm:px-6">
      <div class="max-w-4xl mx-auto text-center">
        <span class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/10 backdrop-blur-sm border border-white/20 text-white/90 text-sm font-medium mb-6">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
          </svg>
          Especialidad médica
        </span>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-4 tracking-tight">
          Otorrinolaringología
        </h1>
        <p class="text-xl text-white/80 max-w-2xl mx-auto">
          Oido, nariz, garganta y estructuras de cabeza y cuello
        </p>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="relative py-16 lg:py-24 px-4 sm:px-6 bg-gradient-to-b from-gray-50 to-white">
    <!-- Decorative Elements -->
    <div class="absolute top-0 left-0 w-72 h-72 bg-brand-pink-500/5 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 right-0 w-96 h-96 bg-brand-green-500/5 rounded-full blur-3xl"></div>

    <div class="max-w-4xl mx-auto relative">
      <!-- Introduction Card -->
      <div class="bg-white rounded-3xl shadow-soft-xl border border-gray-100/80 p-8 lg:p-12 mb-12">
        <div class="flex items-start gap-4 mb-6">
          <div class="w-12 h-12 rounded-2xl bg-gradient-to-br from-brand-pink-500 to-brand-pink-600 flex items-center justify-center flex-shrink-0 shadow-pink-glow">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
            </svg>
          </div>
          <div>
            <h2 class="text-2xl font-bold text-gray-900 mb-2">¿Qué es la otorrinolaringología?</h2>
            <p class="text-gray-600 leading-relaxed">
              La otorrinolaringología es la especialidad médica que se encarga del diagnóstico y tratamiento de las enfermedades del oído, nariz, garganta (faringe y laringe), y estructuras relacionadas de cabeza y cuello.
            </p>
          </div>
        </div>
      </div>

      <!-- Services Section -->
      <div class="mb-12">
        <div class="text-center mb-10">
          <span class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-brand-pink-50 text-brand-pink-600 text-sm font-medium mb-4">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"/>
            </svg>
            Servicios especializados
          </span>
          <h2 class="text-3xl font-bold text-gray-900">Nuestros servicios incluyen</h2>
        </div>

        <div class="grid md:grid-cols-2 gap-4">
          {services.map((service, index) => (
            <a
              href={service.href}
              class="group flex items-center gap-4 bg-white rounded-2xl p-5 shadow-soft border border-gray-100 hover:shadow-soft-xl hover:-translate-y-1 transition-all duration-300"
            >
              <div class:list={[
                'w-12 h-12 rounded-xl flex items-center justify-center flex-shrink-0 transition-all duration-300 group-hover:scale-110',
                index % 3 === 0 ? 'bg-gradient-to-br from-brand-pink-500 to-brand-pink-600 shadow-pink-glow' :
                index % 3 === 1 ? 'bg-gradient-to-br from-brand-green-500 to-brand-green-600 shadow-green-glow' :
                'bg-gradient-to-br from-brand-blue-500 to-brand-blue-600 shadow-blue-glow'
              ]}>
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={service.icon}/>
                </svg>
              </div>
              <div class="flex-1">
                <h3 class="font-semibold text-gray-900 group-hover:text-brand-pink-600 transition-colors duration-300">
                  {service.title}
                </h3>
              </div>
              <svg class="w-5 h-5 text-gray-400 group-hover:text-brand-pink-500 group-hover:translate-x-1 transition-all duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </a>
          ))}
        </div>
      </div>

      <!-- CTA Section -->
      <div class="text-center">
        <div class="inline-block bg-gradient-to-r from-brand-pink-500 to-brand-pink-600 rounded-3xl p-8 lg:p-12 shadow-pink-glow-lg">
          <h3 class="text-2xl font-bold text-white mb-4">¿Necesitas una consulta?</h3>
          <p class="text-white/90 mb-6 max-w-md mx-auto">
            Agenda tu cita con nuestra especialista en otorrinolaringología.
          </p>
          <button
            onclick="openContactForm()"
            class="inline-flex items-center gap-2 px-8 py-4 bg-white text-brand-pink-600 font-bold rounded-full shadow-lg hover:shadow-xl hover:-translate-y-1 transition-all duration-300"
          >
            Agendar cita
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </button>
        </div>
      </div>
    </div>
  </section>

</PageLayout>
