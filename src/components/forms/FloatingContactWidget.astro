---
interface Props {
  doctorName: string;
  specialty: string;
  specialtyValue: string;
}

const { doctorName, specialty, specialtyValue } = Astro.props;
---

<!-- Floating Button -->
<button
  id="floating-contact-btn"
  class="fixed bottom-6 right-6 z-50 flex items-center gap-3 px-6 py-4
         bg-gradient-to-r from-brand-green-500 to-brand-green-600
         text-white font-bold text-sm rounded-2xl
         shadow-green-glow-lg hover:shadow-soft-xl
         hover:scale-105 hover:-translate-y-1
         transition-all duration-300
         animate-pulse-soft"
  aria-label="Abrir formulario de contacto"
>
  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
  </svg>
  Agendar Cita
</button>

<!-- Modal -->
<div
  id="floating-contact-modal"
  class="fixed inset-0 z-[60] flex items-center justify-center p-4
         bg-black/60 backdrop-blur-sm
         opacity-0 invisible transition-all duration-300"
  aria-hidden="true"
>
  <div
    class="bg-white rounded-3xl shadow-soft-xl w-full max-w-md max-h-[90vh] overflow-y-auto
           transform scale-95 transition-all duration-300
           border border-gray-100"
  >
    <!-- Header -->
    <div class="relative flex justify-between items-center p-6 border-b border-gray-100">
      <!-- Accent line -->
      <div class="absolute top-0 left-6 right-6 h-1 bg-gradient-to-r from-brand-green-500 via-brand-pink-500 to-brand-blue-500 rounded-full"></div>

      <h3 class="text-xl font-bold text-gray-900 mt-2">Agendar cita</h3>
      <button
        id="floating-close-btn"
        class="w-10 h-10 flex items-center justify-center rounded-xl
               text-gray-400 hover:text-gray-600 hover:bg-gray-100
               transition-all duration-300"
        aria-label="Cerrar"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
    </div>

    <!-- Body -->
    <div class="p-6">
      <!-- Header text -->
      <div class="text-center mb-6">
        <div class="w-16 h-16 mx-auto mb-4 bg-brand-green-100 rounded-2xl
                    flex items-center justify-center">
          <svg class="w-8 h-8 text-brand-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
        </div>
        <p class="text-sm text-gray-600 leading-relaxed">
          Agenda una cita con {specialty === 'oftalmologia' ? 'el oftalmologo' : 'la otorrinolaringologa'}
        </p>
        <p class="text-xl font-bold text-gray-900 mt-1">{doctorName}</p>
        <p class="text-brand-pink-500 font-semibold text-sm mt-2">
          Registrate y te contactamos
        </p>
      </div>

      <!-- Form -->
      <form id="floating-contact-form" class="space-y-4">
        <input type="hidden" name="especialidad" value={specialtyValue} />

        <!-- Nombre -->
        <div>
          <label class="form-label">Nombre <span class="text-brand-pink-500">*</span></label>
          <input
            type="text"
            name="nombre"
            placeholder="Tu nombre completo"
            required
            class="form-input"
          />
        </div>

        <!-- Correo y Telefono en grid -->
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
          <div>
            <label class="form-label">Correo <span class="text-brand-pink-500">*</span></label>
            <input
              type="email"
              name="email"
              placeholder="correo@ejemplo.com"
              required
              class="form-input"
            />
          </div>

          <div>
            <label class="form-label">Telefono</label>
            <input
              type="tel"
              name="telefono"
              placeholder="300 123 4567"
              class="form-input"
            />
          </div>
        </div>

        <!-- Mensaje -->
        <div>
          <label class="form-label">Mensaje <span class="text-brand-pink-500">*</span></label>
          <textarea
            name="mensaje"
            placeholder="Escribe tu mensaje aqui..."
            rows="3"
            required
            class="form-input resize-none"
          ></textarea>
        </div>

        <!-- Boton enviar -->
        <div class="pt-1">
          <button
            type="submit"
            id="floating-submit-btn"
            class="btn btn-primary btn-lg w-full justify-center group"
          >
            <span data-button-text>Enviar mensaje</span>
            <svg
              class="w-5 h-5 transform group-hover:translate-x-1 transition-transform"
              data-button-icon
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
            </svg>
            <svg
              class="w-5 h-5 animate-spin hidden"
              data-loading-spinner
              fill="none"
              viewBox="0 0 24 24"
            >
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"/>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"/>
            </svg>
          </button>
        </div>
      </form>

      <div id="floating-status" class="hidden mt-4 p-4 rounded-xl text-sm font-medium" role="alert"></div>
    </div>
  </div>
</div>

<script>
  function initFloatingWidget() {
    const btn = document.getElementById('floating-contact-btn');
    const modal = document.getElementById('floating-contact-modal');
    const closeBtn = document.getElementById('floating-close-btn');
    const form = document.getElementById('floating-contact-form') as HTMLFormElement;
    const status = document.getElementById('floating-status');
    const submitBtn = document.getElementById('floating-submit-btn');
    const buttonText = submitBtn?.querySelector('[data-button-text]');
    const buttonIcon = submitBtn?.querySelector('[data-button-icon]');
    const spinner = submitBtn?.querySelector('[data-loading-spinner]');
    const modalContent = modal?.querySelector('div');

    if (!btn || !modal || !closeBtn || !form) return;

    let isOpen = false;

    const openModal = () => {
      isOpen = true;
      modal.classList.remove('opacity-0', 'invisible');
      modal.classList.add('opacity-100', 'visible');
      modalContent?.classList.remove('scale-95');
      modalContent?.classList.add('scale-100');
      modal.setAttribute('aria-hidden', 'false');
      document.body.classList.add('overflow-hidden');
    };

    const closeModal = () => {
      isOpen = false;
      modal.classList.add('opacity-0', 'invisible');
      modal.classList.remove('opacity-100', 'visible');
      modalContent?.classList.add('scale-95');
      modalContent?.classList.remove('scale-100');
      modal.setAttribute('aria-hidden', 'true');
      document.body.classList.remove('overflow-hidden');
      form.reset();
      status?.classList.add('hidden');
    };

    // Expose globally for buttons with onclick
    (window as any).openContactForm = openModal;
    (window as any).closeContactForm = closeModal;

    btn.addEventListener('click', openModal);
    closeBtn.addEventListener('click', closeModal);

    // Close on backdrop click
    modal.addEventListener('click', (e) => {
      if (e.target === modal) closeModal();
    });

    // Close on Escape
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && isOpen) closeModal();
    });

    // Check URL param for auto-open
    const urlParams = new URLSearchParams(window.location.search);
    if (urlParams.get('cta') === 'agendar') {
      setTimeout(openModal, 500);
    }

    // Form submission
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      const formData = new FormData(form);
      const data = Object.fromEntries(formData.entries());

      submitBtn?.setAttribute('disabled', 'true');
      buttonText?.classList.add('hidden');
      buttonIcon?.classList.add('hidden');
      spinner?.classList.remove('hidden');

      try {
        const response = await fetch('https://connect.pabbly.com/workflow/sendwebhookdata/IjU3NjYwNTZkMDYzNDA0MzY1MjY5NTUzNjUxMzci_pc', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            Name: data.nombre,
            Email: data.email,
            Telefono: data.telefono,
            Especialidad: data.especialidad,
            'Service Type': 'Widget Flotante',
            Origin: 'cmeo.com.co',
            Dclid: data.mensaje
          })
        });

        if (response.ok) {
          if (status) {
            status.innerHTML = `
              <div class="flex items-center gap-3">
                <svg class="w-5 h-5 text-brand-green-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <span>Mensaje enviado. Te contactaremos pronto.</span>
              </div>
            `;
            status.className = 'mt-4 p-4 rounded-xl text-sm font-medium bg-brand-green-50 text-brand-green-800 border border-brand-green-200';
          }

          // GTM event
          if ((window as any).dataLayer) {
            (window as any).dataLayer.push({
              event: 'wpforms_submit',
              formName: 'Widget Flotante',
              pagePath: window.location.pathname
            });
          }

          form.reset();
          setTimeout(closeModal, 2500);
        } else {
          throw new Error('Server error');
        }
      } catch (error) {
        if (status) {
          status.innerHTML = `
            <div class="flex items-center gap-3">
              <svg class="w-5 h-5 text-red-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <span>Error al enviar. Intenta de nuevo.</span>
            </div>
          `;
          status.className = 'mt-4 p-4 rounded-xl text-sm font-medium bg-red-50 text-red-800 border border-red-200';
        }
      } finally {
        submitBtn?.removeAttribute('disabled');
        buttonText?.classList.remove('hidden');
        buttonIcon?.classList.remove('hidden');
        spinner?.classList.add('hidden');
        status?.classList.remove('hidden');
      }
    });
  }

  initFloatingWidget();
  document.addEventListener('astro:page-load', initFloatingWidget);
</script>
