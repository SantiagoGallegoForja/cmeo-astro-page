            <!-- Checkbox de terminos -->
            <div class="relative">
              <label class="flex items-start gap-3 cursor-pointer group">
                <input
                  type="checkbox"
                  name="acepta_terminos"
                  required
                  class="mt-1 w-5 h-5 rounded border-2 border-gray-300 text-brand-green-500
