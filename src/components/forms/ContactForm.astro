---
interface Props {
  showMap?: boolean;
  preselectedSpecialty?: string;
}

const { showMap = true, preselectedSpecialty } = Astro.props;
---

<section class="relative bg-gradient-to-br from-gray-50 via-white to-brand-green-50/20 py-20 lg:py-24 px-4 sm:px-6 overflow-hidden" id="contacto">
  <!-- Decorative elements -->
  <div class="absolute top-0 right-0 w-96 h-96 bg-brand-green-500/5 rounded-full blur-3xl"></div>
  <div class="absolute bottom-0 left-0 w-80 h-80 bg-brand-pink-500/5 rounded-full blur-3xl"></div>

  <div class="max-w-7xl mx-auto relative z-10">
    <!-- Header -->
    <div class="text-center mb-12 lg:mb-16">
      <span class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-brand-green-100 text-brand-green-700 text-sm font-semibold mb-4">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
        </svg>
        Estamos para ayudarte
      </span>
      <h2 class="text-3xl lg:text-5xl font-bold text-gray-900 mb-4">
        Contactanos
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Agenda tu cita o resuelve tus dudas. Nuestro equipo te responderá en menos de 24 horas.
      </p>
    </div>

    <div class:list={[
      'grid gap-8 lg:gap-12 items-stretch',
      showMap ? 'grid-cols-1 lg:grid-cols-2' : 'max-w-xl mx-auto'
    ]}>
      <!-- Contact Form -->
      <div class="order-1 lg:order-none">
        <div class="bg-white p-8 lg:p-10 rounded-3xl shadow-soft-lg border border-gray-100 relative">
          <!-- Accent line -->
          <div class="absolute top-0 left-8 right-8 h-1 bg-gradient-to-r from-brand-green-500 via-brand-pink-500 to-brand-blue-500 rounded-full"></div>

          <form id="contact-form" class="space-y-6">
            <div>
              <label for="nombre" class="form-label">
                Nombre completo <span class="text-brand-pink-500">*</span>
              </label>
              <input
                type="text"
                id="nombre"
                name="nombre"
                placeholder="Tu nombre completo"
                required
                autocomplete="name"
                class="form-input"
              />
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
              <div>
                <label for="email" class="form-label">
                  Correo <span class="text-brand-pink-500">*</span>
                </label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  placeholder="correo@ejemplo.com"
                  required
                  autocomplete="email"
                  class="form-input"
                />
              </div>

              <div>
                <label for="telefono" class="form-label">
                  Telefono
                </label>
                <input
                  type="tel"
                  id="telefono"
                  name="telefono"
                  placeholder="300 123 4567"
                  autocomplete="tel"
                  class="form-input"
                />
              </div>
            </div>

            <div>
              <label for="especialidad" class="form-label">
                Especialidad <span class="text-brand-pink-500">*</span>
              </label>
              <select
                id="especialidad"
                name="especialidad"
                required
                class="form-input form-select"
              >
                <option value="" disabled selected>Selecciona tu interes</option>
                <option value="Otorrinolaringologia">Otorrinolaringologia</option>
                <option value="Oftalmologia">Oftalmologia</option>
              </select>
            </div>

            <div>
              <label for="mensaje" class="form-label">
                Mensaje <span class="text-brand-pink-500">*</span>
              </label>
              <textarea
                id="mensaje"
                name="mensaje"
                placeholder="Cuentanos como podemos ayudarte..."
                rows="4"
                required
                class="form-input resize-none"
              ></textarea>
            </div>

            <button
              type="submit"
              id="contact-submit-btn"
              class="btn btn-primary btn-lg w-full justify-center group"
            >
              <span data-button-text>Enviar mensaje</span>
              <svg
                class="w-5 h-5 transform group-hover:translate-x-1 transition-transform"
                data-button-icon
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
              </svg>
              <svg
                class="w-5 h-5 animate-spin hidden"
                data-loading-spinner
                fill="none"
                viewBox="0 0 24 24"
              >
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"/>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"/>
              </svg>
            </button>
          </form>

          <div id="contact-status" class="hidden mt-5 p-4 rounded-xl text-sm font-medium" role="alert"></div>
        </div>
      </div>

      <!-- Map -->
      {showMap && (
        <div class="order-2 lg:order-none flex flex-col gap-6">
          <div class="rounded-3xl overflow-hidden shadow-soft-lg border border-gray-100 flex-grow min-h-[400px]">
            <iframe
              title="Ubicacion CMEO Especialistas"
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3966.9299507615087!2d-75.3787157!3d6.1401126!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8e469f1878ecc90d%3A0x771d3ead2fb33ed9!2sCity%20Medica!5e0!3m2!1ses!2spl!4v1750949778770!5m2!1ses!2spl"
              width="100%"
              height="100%"
              class="w-full h-full min-h-[400px]"
              style="border: 0"
              allowfullscreen
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
            ></iframe>
          </div>

          <!-- Contact cards -->
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <a
              href="tel:+573502217249"
              class="flex items-center gap-4 p-4 rounded-2xl bg-white shadow-soft border border-gray-100
                     hover:shadow-soft-lg hover:border-brand-green-200 hover:-translate-y-0.5
                     transition-all duration-300 group"
            >
              <div class="w-12 h-12 rounded-xl bg-brand-green-100 flex items-center justify-center flex-shrink-0
                          group-hover:bg-brand-green-500 transition-colors">
                <svg class="w-6 h-6 text-brand-green-600 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                </svg>
              </div>
              <div>
                <p class="text-xs text-gray-500 font-medium">Llamanos</p>
                <p class="text-sm font-bold text-gray-900">350 221 7249</p>
              </div>
            </a>

            <a
              href="https://wa.me/573502217249"
              target="_blank"
              rel="noopener"
              class="flex items-center gap-4 p-4 rounded-2xl bg-white shadow-soft border border-gray-100
                     hover:shadow-soft-lg hover:border-brand-green-200 hover:-translate-y-0.5
                     transition-all duration-300 group"
            >
              <div class="w-12 h-12 rounded-xl bg-brand-green-100 flex items-center justify-center flex-shrink-0
                          group-hover:bg-brand-green-500 transition-colors">
                <svg class="w-6 h-6 text-brand-green-600 group-hover:text-white transition-colors" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                </svg>
              </div>
              <div>
                <p class="text-xs text-gray-500 font-medium">WhatsApp</p>
                <p class="text-sm font-bold text-gray-900">Escríbenos</p>
              </div>
            </a>
          </div>
        </div>
      )}
    </div>
  </div>
</section>

<script>
  function initContactForm() {
    const form = document.getElementById('contact-form') as HTMLFormElement;
    const status = document.getElementById('contact-status');
    const submitBtn = document.getElementById('contact-submit-btn');
    const buttonText = submitBtn?.querySelector('[data-button-text]');
    const buttonIcon = submitBtn?.querySelector('[data-button-icon]');
    const spinner = submitBtn?.querySelector('[data-loading-spinner]');

    if (!form || !status || !submitBtn) return;

    // Check URL parameters for preselected specialty
    const urlParams = new URLSearchParams(window.location.search);
    const especialidadParam = urlParams.get('especialidad');

    if (especialidadParam) {
      const select = document.getElementById('especialidad') as HTMLSelectElement;
      if (select) {
        const mapping: Record<string, string> = {
          'otorrino': 'Otorrinolaringologia',
          'oftalmo': 'Oftalmologia'
        };
        const value = mapping[especialidadParam.toLowerCase()];
        if (value) {
          select.value = value;
        }
      }
    }

    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      const formData = new FormData(form);
      const data = Object.fromEntries(formData.entries());

      // Disable button and show loading
      submitBtn.setAttribute('disabled', 'true');
      buttonText?.classList.add('hidden');
      buttonIcon?.classList.add('hidden');
      spinner?.classList.remove('hidden');

      try {
        const response = await fetch('https://connect.pabbly.com/workflow/sendwebhookdata/IjU3NjYwNTZkMDYzNDA0MzY1MjY5NTUzNjUxMzci_pc', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            Name: data.nombre,
            Email: data.email,
            Telefono: data.telefono,
            Especialidad: data.especialidad,
            'Service Type': 'Contacto Web',
            Origin: 'cmeo.com.co',
            Dclid: data.mensaje,
            'Utm Term': '',
            'Utm Source': '',
            'Utm Medium': '',
            'Utm Content': '',
            'Utm Campaign': '',
            Gclid: '',
            Fclid: ''
          })
        });

        if (response.ok) {
          status.innerHTML = `
            <div class="flex items-center gap-3">
              <svg class="w-5 h-5 text-brand-green-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <span>Mensaje enviado correctamente. Te contactaremos pronto.</span>
            </div>
          `;
          status.className = 'mt-5 p-4 rounded-xl text-sm font-medium bg-brand-green-50 text-brand-green-800 border border-brand-green-200';
          form.reset();

          // GTM event
          if (typeof window !== 'undefined' && (window as any).dataLayer) {
            (window as any).dataLayer.push({
              event: 'wpforms_submit',
              'attributes.response.data': 'wpforms-confirmation',
              formName: 'Formulario Principal',
              pagePath: window.location.pathname
            });
          }
        } else {
          throw new Error('Error en el servidor');
        }
      } catch (error) {
        status.innerHTML = `
          <div class="flex items-center gap-3">
            <svg class="w-5 h-5 text-red-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span>Hubo un error al enviar. Por favor intenta de nuevo.</span>
          </div>
        `;
        status.className = 'mt-5 p-4 rounded-xl text-sm font-medium bg-red-50 text-red-800 border border-red-200';
      } finally {
        submitBtn.removeAttribute('disabled');
        buttonText?.classList.remove('hidden');
        buttonIcon?.classList.remove('hidden');
        spinner?.classList.add('hidden');
        status.classList.remove('hidden');

        setTimeout(() => {
          status.classList.add('hidden');
        }, 5000);
      }
    });
  }

  initContactForm();
  document.addEventListener('astro:page-load', initContactForm);
</script>
