---
// ContactModal.astro - Modal independiente para botones "Agendar cita"
// Este componente es INDEPENDIENTE del FloatingContactWidget
---

<!-- Contact Modal -->
<div
  id="contact-modal"
  class="fixed inset-0 z-[100] flex items-center justify-center p-4
         bg-black/80 backdrop-blur-md
         opacity-0 invisible transition-all duration-300"
  aria-hidden="true"
>
  <div
    class="bg-white rounded-3xl shadow-2xl w-full max-w-md max-h-[90vh] overflow-y-auto
           transform scale-95 transition-all duration-300
           border border-gray-200 relative"
  >
    <!-- Header -->
    <div class="relative flex justify-between items-center p-6 border-b border-gray-100">
      <!-- Accent line -->
      <div class="absolute top-0 left-6 right-6 h-1 bg-gradient-to-r from-brand-pink-500 via-brand-green-500 to-brand-blue-500 rounded-full"></div>

      <h3 class="text-xl font-bold text-gray-900 mt-2">Agendar cita</h3>
      <button
        id="contact-modal-close-btn"
        class="w-10 h-10 flex items-center justify-center rounded-xl
               text-gray-400 hover:text-gray-600 hover:bg-gray-100
               transition-all duration-300"
        aria-label="Cerrar"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
    </div>

    <!-- Body -->
    <div class="p-6">
      <!-- Header text -->
      <div class="text-center mb-6">
        <div class="w-16 h-16 mx-auto mb-4 bg-brand-pink-100 rounded-2xl
                    flex items-center justify-center">
          <svg class="w-8 h-8 text-brand-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
        </div>
        <p class="text-lg font-bold text-gray-900">Agenda tu cita en CMEO</p>
        <p class="text-sm text-gray-600 mt-1">Completa el formulario y te contactaremos</p>
      </div>

      <!-- Form -->
      <form id="contact-modal-form" class="space-y-4">

        <!-- Nombre -->
        <div class="relative">
          <label class="absolute -top-2.5 left-4 px-2 bg-white text-xs font-medium text-gray-600 z-10">
            Nombre completo <span class="text-brand-pink-500">*</span>
          </label>
          <input
            type="text"
            name="nombre"
            placeholder="Tu nombre"
            required
            class="w-full px-5 py-3.5 bg-white border-2 border-gray-200 rounded-2xl text-gray-800 placeholder-gray-400
                   transition-all duration-300
                   hover:border-brand-pink-300
                   focus:outline-none focus:border-brand-pink-500 focus:ring-4 focus:ring-brand-pink-100"
          />
        </div>

        <!-- Correo -->
        <div class="relative">
          <label class="absolute -top-2.5 left-4 px-2 bg-white text-xs font-medium text-gray-600 z-10">
            Correo electr贸nico <span class="text-brand-pink-500">*</span>
          </label>
          <input
            type="email"
            name="email"
            placeholder="correo@ejemplo.com"
            required
            class="w-full px-5 py-3.5 bg-white border-2 border-gray-200 rounded-2xl text-gray-800 placeholder-gray-400
                   transition-all duration-300
                   hover:border-brand-pink-300
                   focus:outline-none focus:border-brand-pink-500 focus:ring-4 focus:ring-brand-pink-100"
          />
        </div>

        <!-- Celular -->
        <div class="relative">
          <label class="absolute -top-2.5 left-4 px-2 bg-white text-xs font-medium text-gray-600 z-10">
            Celular <span class="text-brand-pink-500">*</span>
          </label>
          <div class="flex">
            <select
              name="indicativo"
              class="appearance-none px-2 py-3.5 bg-gray-50 border-2 border-r-0 border-gray-200 rounded-l-2xl text-gray-600 text-sm font-medium cursor-pointer
                     hover:bg-gray-100 focus:outline-none focus:bg-white focus:border-brand-pink-500
                     transition-all duration-300"
              style="min-width: 85px;"
            >
              <option value="+57"> +57</option>
              <option value="+1">吼 +1</option>
              <option value="+52">拆 +52</option>
              <option value="+34"> +34</option>
              <option value="+51">叼 +51</option>
              <option value="+56"> +56</option>
              <option value="+54"> +54</option>
              <option value="+593"> +593</option>
              <option value="+58">火 +58</option>
              <option value="+507">叼 +507</option>
            </select>
            <input
              type="tel"
              name="telefono"
              placeholder="300 123 4567"
              class="w-full px-4 py-3.5 bg-white border-2 border-l-0 border-gray-200 rounded-r-2xl text-gray-800 placeholder-gray-400
                     transition-all duration-300
                     hover:border-brand-pink-300
                     focus:outline-none focus:border-brand-pink-500 focus:ring-4 focus:ring-brand-pink-100"
            />
          </div>
        </div>

        <!-- Especialidad -->
        <div class="relative">
          <label class="absolute -top-2.5 left-4 px-2 bg-white text-xs font-medium text-gray-600 z-10">
            Especialidad <span class="text-brand-pink-500">*</span>
          </label>
          <select
            name="especialidad"
            id="contact-modal-especialidad"
            required
            class="w-full px-5 py-3.5 bg-white border-2 border-gray-200 rounded-2xl text-gray-800 appearance-none cursor-pointer
                   transition-all duration-300
                   hover:border-brand-pink-300
                   focus:outline-none focus:border-brand-pink-500 focus:ring-4 focus:ring-brand-pink-100
                   bg-no-repeat"
            style="background-image: url('data:image/svg+xml,%3Csvg xmlns=%27http://www.w3.org/2000/svg%27 fill=%27none%27 viewBox=%270 0 24 24%27 stroke=%27%236b7280%27 stroke-width=%272%27%3E%3Cpath stroke-linecap=%27round%27 stroke-linejoin=%27round%27 d=%27M19 9l-7 7-7-7%27/%3E%3C/svg%3E'); background-size: 1.25rem; background-position: right 1rem center;"
          >
            <option value="" disabled>Selecciona una opci贸n</option>
            <option value="Otorrinolaringologia">Otorrinolaringolog铆a</option>
            <option value="Oftalmologia">Oftalmolog铆a</option>
          </select>
        </div>

        <!-- Convenio -->
        <div class="relative" id="contact-modal-convenio-container" style="display: none;">
          <label class="absolute -top-2.5 left-4 px-2 bg-white text-xs font-medium text-gray-600 z-10">
            Convenio <span class="text-brand-pink-500">*</span>
          </label>
          <select
            name="convenio"
            id="contact-modal-convenio"
            required
            class="w-full px-5 py-3.5 bg-white border-2 border-gray-200 rounded-2xl text-gray-800 appearance-none cursor-pointer
                   transition-all duration-300
                   hover:border-brand-pink-300
                   focus:outline-none focus:border-brand-pink-500 focus:ring-4 focus:ring-brand-pink-100
                   bg-no-repeat"
            style="background-image: url('data:image/svg+xml,%3Csvg xmlns=%27http://www.w3.org/2000/svg%27 fill=%27none%27 viewBox=%270 0 24 24%27 stroke=%27%236b7280%27 stroke-width=%272%27%3E%3Cpath stroke-linecap=%27round%27 stroke-linejoin=%27round%27 d=%27M19 9l-7 7-7-7%27/%3E%3C/svg%3E'); background-size: 1.25rem; background-position: right 1rem center;"
          >
            <option value="" disabled selected>Selecciona tu convenio</option>
          </select>
        </div>

        <!-- Checkbox de terminos -->
        <div class="relative">
          <label class="flex items-start gap-2 cursor-pointer">
            <input
              type="checkbox"
              name="acepta_terminos"
              required
              class="mt-0.5 w-4 h-4 rounded border-2 border-gray-300 text-brand-pink-500
                     focus:ring-2 focus:ring-brand-pink-500/20
                     checked:bg-brand-pink-500 checked:border-brand-pink-500
                     transition-all duration-200 cursor-pointer accent-brand-pink-500"
            />
            <span class="text-xs text-gray-600 leading-relaxed">
              Acepto la <a href="/politica-privacidad" target="_blank" class="text-brand-pink-600 hover:text-brand-pink-700 underline font-medium">pol铆tica de tratamiento de datos</a>
            </span>
          </label>
        </div>

        <!-- Submit Button -->
        <div class="pt-2">
          <button
            type="submit"
            id="contact-modal-submit-btn"
            class="w-full px-6 py-3.5 bg-gradient-to-r from-brand-pink-500 to-brand-pink-600 text-white font-bold rounded-2xl
                   shadow-lg hover:shadow-xl hover:from-brand-pink-600 hover:to-brand-pink-700
                   transform hover:-translate-y-0.5 active:translate-y-0
                   transition-all duration-300
                   flex items-center justify-center gap-2 group"
          >
            <svg class="w-5 h-5" data-modal-btn-icon fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
            <span data-modal-btn-text>Solicitar Mi Cita</span>
            <svg
              class="w-4 h-4 transform group-hover:translate-x-1 transition-transform"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
            </svg>
            <svg
              class="w-5 h-5 animate-spin hidden"
              data-modal-loading-spinner
              fill="none"
              viewBox="0 0 24 24"
            >
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"/>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"/>
            </svg>
          </button>
        </div>

        <!-- Trust badges -->
        <div class="flex flex-wrap items-center justify-center gap-x-4 gap-y-1 pt-2 text-xs text-gray-500">
          <div class="flex items-center gap-1">
            <svg class="w-4 h-4 text-brand-pink-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <span>Respuesta en 24h</span>
          </div>
          <div class="flex items-center gap-1">
            <svg class="w-4 h-4 text-brand-pink-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <span>100% confidencial</span>
          </div>
        </div>
      </form>

      <div id="contact-modal-status" class="hidden mt-4 p-4 rounded-xl text-sm font-medium" role="alert"></div>
    </div>
  </div>
</div>

<script>
  function initContactModal() {
    const modal = document.getElementById('contact-modal');
    const closeBtn = document.getElementById('contact-modal-close-btn');
    const form = document.getElementById('contact-modal-form') as HTMLFormElement;
    const status = document.getElementById('contact-modal-status');
    const submitBtn = document.getElementById('contact-modal-submit-btn');
    const buttonText = submitBtn?.querySelector('[data-modal-btn-text]');
    const buttonIcon = submitBtn?.querySelector('[data-modal-btn-icon]');
    const spinner = submitBtn?.querySelector('[data-modal-loading-spinner]');
    const modalContent = modal?.querySelector('div');
    const especialidadSelect = document.getElementById('contact-modal-especialidad') as HTMLSelectElement;

    if (!modal || !closeBtn || !form) return;

    // Convenio options by specialty
    const conveniosBySpecialty: Record<string, string[]> = {
      'Otorrinolaringologia': ['P贸liza Sura', 'Seguros Coomeva', 'Consulta privada'],
      'Oftalmologia': ['P贸liza Sura', 'Seguros Coomeva', 'Allianz', 'Colmedica', 'Consulta privada'],
    };

    const convenioContainer = document.getElementById('contact-modal-convenio-container');
    const convenioSelect = document.getElementById('contact-modal-convenio') as HTMLSelectElement;

    // Update convenio options when specialty changes
    const updateConvenioOptions = (specialty: string) => {
      if (!convenioSelect || !convenioContainer) return;

      const options = conveniosBySpecialty[specialty] || [];
      convenioSelect.innerHTML = '<option value="" disabled selected>Selecciona tu convenio</option>';

      if (options.length > 0) {
        options.forEach(option => {
          const opt = document.createElement('option');
          opt.value = option;
          opt.textContent = option;
          convenioSelect.appendChild(opt);
        });
        convenioContainer.style.display = 'block';
        convenioSelect.required = true;
      } else {
        convenioContainer.style.display = 'none';
        convenioSelect.required = false;
      }
    };

    especialidadSelect?.addEventListener('change', (e) => {
      const target = e.target as HTMLSelectElement;
      updateConvenioOptions(target.value);
    });

    // Helper function to get UTM params from sessionStorage or URL
    const getUtmParams = () => {
      const STORAGE_KEY = 'cmeo_utm_params';
      const stored = sessionStorage.getItem(STORAGE_KEY);

      if (stored) {
        try {
          const parsed = JSON.parse(stored);
          return {
            utm_source: parsed.utm_source || '',
            utm_medium: parsed.utm_medium || '',
            utm_campaign: parsed.utm_campaign || '',
            utm_term: parsed.utm_term || '',
            utm_content: parsed.utm_content || '',
            gclid: parsed.gclid || '',
            fclid: parsed.fclid || '',
            dclid: parsed.dclid || '',
          };
        } catch {}
      }

      // Fallback to URL params
      const params = new URLSearchParams(window.location.search);
      return {
        utm_source: params.get('utm_source') || '',
        utm_medium: params.get('utm_medium') || '',
        utm_campaign: params.get('utm_campaign') || '',
        utm_term: params.get('utm_term') || '',
        utm_content: params.get('utm_content') || '',
        gclid: params.get('gclid') || '',
        fclid: params.get('fclid') || '',
        dclid: params.get('dclid') || '',
      };
    };

    let isOpen = false;

    const openModal = (especialidad?: string) => {
      isOpen = true;

      // Close mobile menu if open
      const mobileMenu = document.getElementById('mobile-menu');
      const menuBackdrop = document.getElementById('menu-backdrop');
      const menuPanel = document.getElementById('menu-panel');
      if (mobileMenu) {
        mobileMenu.classList.add('pointer-events-none');
        mobileMenu.classList.remove('pointer-events-auto');
        mobileMenu.setAttribute('aria-hidden', 'true');
      }
      if (menuBackdrop) {
        menuBackdrop.classList.add('opacity-0');
        menuBackdrop.classList.remove('opacity-100');
      }
      if (menuPanel) {
        menuPanel.classList.add('translate-x-full');
        menuPanel.classList.remove('translate-x-0');
      }

      modal.classList.remove('opacity-0', 'invisible');
      modal.classList.add('opacity-100', 'visible');
      modalContent?.classList.remove('scale-95');
      modalContent?.classList.add('scale-100');
      modal.setAttribute('aria-hidden', 'false');
      document.body.classList.add('overflow-hidden');

      // Pre-select specialty if provided
      if (especialidad && especialidadSelect) {
        especialidadSelect.value = especialidad;
        updateConvenioOptions(especialidad);
      }
    };

    const closeModal = () => {
      isOpen = false;
      modal.classList.add('opacity-0', 'invisible');
      modal.classList.remove('opacity-100', 'visible');
      modalContent?.classList.add('scale-95');
      modalContent?.classList.remove('scale-100');
      modal.setAttribute('aria-hidden', 'true');
      document.body.classList.remove('overflow-hidden');
      form.reset();
      status?.classList.add('hidden');
      // Reset convenio container
      if (convenioContainer) convenioContainer.style.display = 'none';
    };

    // Expose globally for "Agendar cita" buttons
    (window as any).openAppointmentModal = openModal;
    (window as any).closeAppointmentModal = closeModal;

    closeBtn.addEventListener('click', closeModal);

    // Close on backdrop click
    modal.addEventListener('click', (e) => {
      if (e.target === modal) closeModal();
    });

    // Close on Escape
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && isOpen) closeModal();
    });

    // Form submission
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      const formData = new FormData(form);
      const data = Object.fromEntries(formData.entries());

      submitBtn?.setAttribute('disabled', 'true');
      buttonText?.classList.add('hidden');
      buttonIcon?.classList.add('hidden');
      spinner?.classList.remove('hidden');

      try {
        const utmParams = getUtmParams();
        // Clean phone number - remove everything except digits
        let phoneDigits = String(data.telefono).replace(/\D/g, '');
        const countryCode = String(data.indicativo).replace(/\D/g, ''); // e.g., "57"
        // If phone already starts with country code, don't duplicate it
        if (phoneDigits.startsWith(countryCode)) {
          phoneDigits = phoneDigits.slice(countryCode.length);
        }
        const cleanPhone = `${data.indicativo}${phoneDigits}`;
        const response = await fetch('/api/contact', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            name: data.nombre,
            email: data.email,
            phone: cleanPhone,
            service: data.especialidad,
            convenio: data.convenio || '',
            source: 'Modal Agendar Cita',
            utmParams
          })
        });

        if (response.ok) {
          if (status) {
            status.innerHTML = `
              <div class="flex items-center gap-3">
                <svg class="w-5 h-5 text-brand-green-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <span>隆Mensaje enviado! Te contactaremos pronto.</span>
              </div>
            `;
            status.className = 'mt-4 p-5 rounded-xl text-base font-semibold bg-brand-green-100 text-brand-green-900 border-2 border-brand-green-400 shadow-lg';
          }

          // GTM event
          if ((window as any).dataLayer) {
            (window as any).dataLayer.push({
              event: 'wpforms_submit',
              formName: 'Modal Agendar Cita',
              pagePath: window.location.pathname
            });
          }

          form.reset();
          // Close modal after 2 seconds
          setTimeout(() => {
            closeModal();
          }, 2000);
        } else {
          throw new Error('Server error');
        }
      } catch (error) {
        if (status) {
          status.innerHTML = `
            <div class="flex items-center gap-3">
              <svg class="w-5 h-5 text-red-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <span>Error al enviar. Intenta de nuevo.</span>
            </div>
          `;
          status.className = 'mt-4 p-5 rounded-xl text-base font-semibold bg-red-100 text-red-900 border-2 border-red-400 shadow-lg';
        }
      } finally {
        submitBtn?.removeAttribute('disabled');
        buttonText?.classList.remove('hidden');
        buttonIcon?.classList.remove('hidden');
        spinner?.classList.add('hidden');
        status?.classList.remove('hidden');
      }
    });
  }

  initContactModal();
  document.addEventListener('astro:page-load', initContactModal);
</script>
