---
interface Props {
  slides?: Array<{ src: string; alt: string }>;
  showForm?: boolean;
}

const {
  slides = [
    { src: 'https://darkviolet-chough-405570.hostingersite.com/wp-content/uploads/2025/09/slide1.png', alt: 'CMEO Especialistas Slide 1' },
    { src: 'https://darkviolet-chough-405570.hostingersite.com/wp-content/uploads/2025/09/slide1.png', alt: 'CMEO Especialistas Slide 2' },
    { src: 'https://darkviolet-chough-405570.hostingersite.com/wp-content/uploads/2025/09/slide1.png', alt: 'CMEO Especialistas Slide 3' },
  ],
  showForm = true
} = Astro.props;
---

<section class="relative h-[80vh] min-h-[600px] w-full overflow-hidden">
  <!-- Background Slider -->
  <div id="hero-slider" class="absolute inset-0 z-0">
    {slides.map((slide, index) => (
      <img
        src={slide.src}
        alt={slide.alt}
        class:list={[
          'hero-slide w-full h-full object-cover absolute inset-0 transition-all duration-1000 ease-out',
          index === 0 ? 'opacity-100 scale-100' : 'opacity-0 scale-105'
        ]}
        data-index={index}
        loading={index === 0 ? 'eager' : 'lazy'}
      />
    ))}
  </div>

  <!-- Premium Multi-layer Gradient Overlay -->
  <div class="absolute inset-0 z-5">
    <div class="absolute inset-0 bg-gradient-to-b from-black/30 via-black/10 to-black/50"></div>
    <div class="absolute inset-0 bg-gradient-to-r from-brand-green-900/20 via-transparent to-brand-pink-900/20"></div>
  </div>

  <!-- Decorative elements -->
  <div class="absolute top-20 left-10 w-64 h-64 bg-brand-green-500/10 rounded-full blur-3xl"></div>
  <div class="absolute bottom-20 right-10 w-72 h-72 bg-brand-pink-500/10 rounded-full blur-3xl"></div>

  <!-- Slide indicators -->
  <div class="absolute bottom-[220px] md:bottom-[180px] left-1/2 -translate-x-1/2 z-20 flex gap-2">
    {slides.map((_, index) => (
      <button
        class:list={[
          'slide-indicator w-2 h-2 rounded-full transition-all duration-300',
          index === 0 ? 'bg-white w-8' : 'bg-white/50 hover:bg-white/80'
        ]}
        data-index={index}
        aria-label={`Ir a slide ${index + 1}`}
      />
    ))}
  </div>

  <!-- Floating Appointment Form -->
  {showForm && (
    <div class="absolute bottom-6 left-1/2 transform -translate-x-1/2 w-[95%] max-w-5xl z-10 px-4">
      <div class="relative bg-white/95 backdrop-blur-xl p-5 md:p-6 rounded-2xl shadow-soft-xl border border-white/20">
        <!-- Decorative accent -->
        <div class="absolute -top-px left-6 right-6 h-1 bg-gradient-to-r from-brand-green-500 via-brand-pink-500 to-brand-blue-500 rounded-full"></div>

        <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-4 gap-2">
          <h3 class="text-lg font-bold text-gray-900">
            Agenda tu cita
          </h3>
          <span class="inline-flex items-center gap-1.5 text-xs text-gray-500">
            <svg class="w-3.5 h-3.5 text-brand-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            Respuesta en 24h
          </span>
        </div>

        <form id="hero-appointment-form" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-3">
          <div class="lg:col-span-1">
            <input
              type="text"
              name="nombre"
              placeholder="Nombre completo"
              required
              class="w-full px-4 py-3 bg-white border-2 border-gray-300 rounded-xl text-gray-900 placeholder-gray-400 shadow-sm
                     hover:border-gray-400 hover:shadow-md
                     focus:outline-none focus:border-brand-green-500 focus:ring-2 focus:ring-brand-green-500/20 focus:shadow-md transition-all"
            />
          </div>
          <div class="lg:col-span-1">
            <input
              type="email"
              name="email"
              placeholder="Correo electronico"
              required
              class="w-full px-4 py-3 bg-white border-2 border-gray-300 rounded-xl text-gray-900 placeholder-gray-400 shadow-sm
                     hover:border-gray-400 hover:shadow-md
                     focus:outline-none focus:border-brand-green-500 focus:ring-2 focus:ring-brand-green-500/20 focus:shadow-md transition-all"
            />
          </div>
          <div class="lg:col-span-1">
            <div class="flex">
              <select
                name="indicativo"
                class="appearance-none px-2 py-3 bg-gray-50 border-2 border-r-0 border-gray-300 rounded-l-xl text-gray-600 text-sm font-medium cursor-pointer
                       hover:bg-gray-100 focus:outline-none focus:bg-white focus:border-brand-green-500
                       transition-all duration-300"
                style="min-width: 75px;"
              >
                <option value="+57">+57</option>
                <option value="+1">+1</option>
                <option value="+52">+52</option>
                <option value="+34">+34</option>
                <option value="+51">+51</option>
                <option value="+56">+56</option>
                <option value="+54">+54</option>
                <option value="+593">+593</option>
                <option value="+58">+58</option>
                <option value="+507">+507</option>
              </select>
              <input
                type="tel"
                name="telefono"
                placeholder="Celular"
                class="w-full px-3 py-3 bg-white border-2 border-l-0 border-gray-300 rounded-r-xl text-gray-900 placeholder-gray-400 shadow-sm
                       hover:border-gray-400 hover:shadow-md
                       focus:outline-none focus:border-brand-green-500 focus:ring-2 focus:ring-brand-green-500/20 focus:shadow-md transition-all"
              />
            </div>
          </div>
          <div class="lg:col-span-1">
            <select
              name="especialidad"
              required
              class="w-full px-4 py-3 bg-white border-2 border-gray-300 rounded-xl text-gray-900 appearance-none cursor-pointer shadow-sm
                     hover:border-gray-400 hover:shadow-md
                     focus:outline-none focus:border-brand-green-500 focus:ring-2 focus:ring-brand-green-500/20 focus:shadow-md transition-all
                     bg-no-repeat"
              style="background-image: url('data:image/svg+xml,%3Csvg xmlns=%27http://www.w3.org/2000/svg%27 fill=%27none%27 viewBox=%270 0 24 24%27 stroke=%27%236b7280%27 stroke-width=%272%27%3E%3Cpath stroke-linecap=%27round%27 stroke-linejoin=%27round%27 d=%27M19 9l-7 7-7-7%27/%3E%3C/svg%3E'); background-size: 1.25rem; background-position: right 0.75rem center;"
            >
              <option value="">Especialidad</option>
              <option value="otorrinolaringologia">Otorrinolaringologia</option>
              <option value="oftalmologia">Oftalmologia</option>
            </select>
          </div>
          <div class="lg:col-span-4">
            <label class="flex items-center gap-2 cursor-pointer">
              <input
                type="checkbox"
                name="acepta_terminos"
                required
                class="w-4 h-4 rounded border-2 border-gray-300 text-brand-green-500
                       focus:ring-2 focus:ring-brand-green-500/20
                       checked:bg-brand-green-500 checked:border-brand-green-500
                       transition-all duration-200 cursor-pointer accent-brand-green-500"
              />
              <span class="text-xs text-gray-600">
                Acepto la <a href="/politica-privacidad" target="_blank" class="text-brand-green-600 hover:text-brand-green-700 underline font-medium">politica de tratamiento de datos</a>
              </span>
            </label>
          </div>
          <div class="lg:col-span-1">
            <button
              type="submit"
              class="w-full px-6 py-3 bg-gradient-to-r from-brand-green-500 to-brand-green-600 text-white font-semibold rounded-xl
                     shadow-elevation-2 hover:shadow-green-glow-lg hover:-translate-y-0.5
                     transition-all duration-300 flex items-center justify-center gap-2 group"
            >
              <span>Enviar</span>
              <svg class="w-4 h-4 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
              </svg>
            </button>
          </div>
        </form>

        <div id="hero-form-status" class="hidden mt-3 p-3 rounded-xl text-sm font-medium"></div>
      </div>
    </div>
  )}
</section>

<script>
  function initHeroSlider() {
    const slides = document.querySelectorAll('.hero-slide');
    const indicators = document.querySelectorAll('.slide-indicator');
    if (slides.length === 0) return;

    let current = 0;
    let interval: ReturnType<typeof setInterval>;

    function showSlide(index: number) {
      slides.forEach((img, i) => {
        if (i === index) {
          img.classList.add('opacity-100', 'scale-100');
          img.classList.remove('opacity-0', 'scale-105');
        } else {
          img.classList.remove('opacity-100', 'scale-100');
          img.classList.add('opacity-0', 'scale-105');
        }
      });

      indicators.forEach((ind, i) => {
        if (i === index) {
          ind.classList.add('bg-white', 'w-8');
          ind.classList.remove('bg-white/50');
        } else {
          ind.classList.remove('bg-white', 'w-8');
          ind.classList.add('bg-white/50');
        }
      });

      current = index;
    }

    function nextSlide() {
      const next = (current + 1) % slides.length;
      showSlide(next);
    }

    // Click handlers for indicators
    indicators.forEach((ind, i) => {
      ind.addEventListener('click', () => {
        showSlide(i);
        // Reset interval
        clearInterval(interval);
        interval = setInterval(nextSlide, 5000);
      });
    });

    interval = setInterval(nextSlide, 5000);
  }

  function initHeroForm() {
    const form = document.getElementById('hero-appointment-form') as HTMLFormElement;
    const status = document.getElementById('hero-form-status');
    if (!form || !status) return;

    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      const formData = new FormData(form);
      const data = Object.fromEntries(formData.entries());

      const submitBtn = form.querySelector('button[type="submit"]') as HTMLButtonElement;
      const originalHTML = submitBtn.innerHTML;
      submitBtn.disabled = true;
      submitBtn.innerHTML = `
        <svg class="w-5 h-5 animate-spin" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
        <span>Enviando...</span>
      `;

      try {
        const response = await fetch('https://connect.pabbly.com/workflow/sendwebhookdata/IjU3NjYwNTZkMDYzNDA0MzY1MjY5NTUzNjUxMzci_pc', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            Name: data.nombre,
            Email: data.email,
            Indicativo: data.indicativo,
            Telefono: data.telefono,
            Especialidad: data.especialidad,
            Formulario: 'Hero Home',
            Pagina: window.location.href
          })
        });

        if (response.ok) {
          status.innerHTML = `
            <div class="flex items-center gap-3">
              <svg class="w-5 h-5 text-brand-green-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <span>Solicitud enviada. Redirigiendo a WhatsApp...</span>
            </div>
          `;
          status.className = 'mt-4 p-4 rounded-xl text-sm font-medium bg-brand-green-50 text-brand-green-800 border border-brand-green-200';
          form.reset();
          // Redirect to WhatsApp after 1.5 seconds
          setTimeout(() => {
            window.location.href = 'https://wa.me/573224148773';
          }, 1500);
        } else {
          throw new Error('Error en el envio');
        }
      } catch (error) {
        status.innerHTML = `
          <div class="flex items-center gap-3">
            <svg class="w-5 h-5 text-red-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span>Hubo un error al enviar. Por favor intenta de nuevo.</span>
          </div>
        `;
        status.className = 'mt-4 p-4 rounded-xl text-sm font-medium bg-red-50 text-red-800 border border-red-200';
      } finally {
        submitBtn.disabled = false;
        submitBtn.innerHTML = originalHTML;
        status.classList.remove('hidden');
      }
    });
  }

  initHeroSlider();
  initHeroForm();
  document.addEventListener('astro:page-load', () => {
    initHeroSlider();
    initHeroForm();
  });
</script>
