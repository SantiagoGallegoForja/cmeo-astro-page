---
interface Props {
  heroImage?: string;
  showForm?: boolean;
}

const {
  heroImage = '/images/hero-team.png',
  showForm = true
} = Astro.props;
---

<section class="relative min-h-[600px] lg:min-h-[700px] w-full overflow-hidden">
  <!-- Background Image -->
  <div class="absolute inset-0 z-0">
    <img
      src={heroImage}
      alt="Equipo medico CMEO Especialistas"
      class="w-full h-full object-cover object-left"
      loading="eager"
    />
    <!-- Gradient overlay for better form readability on right side -->
    <div class="absolute inset-0 bg-gradient-to-l from-black/40 via-black/20 to-transparent"></div>
  </div>

  <!-- Content Container -->
  <div class="relative z-10 container mx-auto px-4 h-full min-h-[600px] lg:min-h-[700px] flex items-center justify-end">

    <!-- Form positioned on the right -->
    {showForm && (
      <div class="w-full max-w-md lg:max-w-lg py-8 lg:py-12">
        <div class="relative bg-white/95 backdrop-blur-sm p-6 md:p-8 rounded-2xl shadow-2xl border border-white/20">
          <!-- Decorative accent -->
          <div class="absolute -top-px left-6 right-6 h-1.5 bg-gradient-to-r from-brand-green-500 via-brand-pink-500 to-brand-blue-500 rounded-full"></div>

          <!-- Header -->
          <div class="text-center mb-6">
            <div class="inline-flex items-center gap-2 mb-2">
              <svg class="w-6 h-6 text-brand-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
              <h3 class="text-xl md:text-2xl font-bold text-gray-900">
                Agenda tu cita
              </h3>
            </div>
            <p class="text-sm text-gray-500">
              Sin compromiso. Te contactamos en menos de 24 horas
            </p>
          </div>

          <form id="hero-appointment-form" class="space-y-4">
            <!-- Nombre -->
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
              </div>
              <input
                type="text"
                name="nombre"
                placeholder="Nombre completo"
                required
                class="w-full pl-12 pr-4 py-4 bg-gray-50 border-2 border-gray-200 rounded-xl text-gray-900 placeholder-gray-400
                       hover:border-gray-300 hover:bg-white
                       focus:outline-none focus:border-brand-green-500 focus:ring-2 focus:ring-brand-green-500/20 focus:bg-white transition-all"
              />
            </div>

            <!-- Email -->
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              </div>
              <input
                type="email"
                name="email"
                placeholder="Correo electronico"
                required
                class="w-full pl-12 pr-4 py-4 bg-gray-50 border-2 border-gray-200 rounded-xl text-gray-900 placeholder-gray-400
                       hover:border-gray-300 hover:bg-white
                       focus:outline-none focus:border-brand-green-500 focus:ring-2 focus:ring-brand-green-500/20 focus:bg-white transition-all"
              />
            </div>

            <!-- Telefono -->
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                </svg>
              </div>
              <div class="flex">
                <select
                  name="indicativo"
                  class="appearance-none pl-12 pr-2 py-4 bg-gray-50 border-2 border-r-0 border-gray-200 rounded-l-xl text-gray-600 text-sm font-medium cursor-pointer
                         hover:bg-white focus:outline-none focus:bg-white focus:border-brand-green-500
                         transition-all duration-300"
                  style="min-width: 90px;"
                >
                  <option value="+57">+57</option>
                  <option value="+1">+1</option>
                  <option value="+52">+52</option>
                  <option value="+34">+34</option>
                  <option value="+51">+51</option>
                  <option value="+56">+56</option>
                  <option value="+54">+54</option>
                  <option value="+593">+593</option>
                  <option value="+58">+58</option>
                  <option value="+507">+507</option>
                </select>
                <input
                  type="tel"
                  name="telefono"
                  placeholder="Numero de celular"
                  class="w-full px-4 py-4 bg-gray-50 border-2 border-l-0 border-gray-200 rounded-r-xl text-gray-900 placeholder-gray-400
                         hover:border-gray-300 hover:bg-white
                         focus:outline-none focus:border-brand-green-500 focus:ring-2 focus:ring-brand-green-500/20 focus:bg-white transition-all"
                />
              </div>
            </div>

            <!-- Especialidad -->
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none z-10">
                <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                </svg>
              </div>
              <select
                name="especialidad"
                required
                class="w-full pl-12 pr-10 py-4 bg-gray-50 border-2 border-gray-200 rounded-xl text-gray-900 appearance-none cursor-pointer
                       hover:border-gray-300 hover:bg-white
                       focus:outline-none focus:border-brand-green-500 focus:ring-2 focus:ring-brand-green-500/20 focus:bg-white transition-all
                       bg-no-repeat"
                style="background-image: url('data:image/svg+xml,%3Csvg xmlns=%27http://www.w3.org/2000/svg%27 fill=%27none%27 viewBox=%270 0 24 24%27 stroke=%27%236b7280%27 stroke-width=%272%27%3E%3Cpath stroke-linecap=%27round%27 stroke-linejoin=%27round%27 d=%27M19 9l-7 7-7-7%27/%3E%3C/svg%3E'); background-size: 1.25rem; background-position: right 0.75rem center;"
              >
                <option value="">Selecciona especialidad</option>
                <option value="otorrinolaringologia">Otorrinolaringologia</option>
                <option value="oftalmologia">Oftalmologia</option>
              </select>
            </div>

            <!-- Checkbox de terminos -->
            <div class="flex items-center">
              <label class="flex items-center gap-2 cursor-pointer">
                <input
                  type="checkbox"
                  name="acepta_terminos"
                  required
                  class="w-5 h-5 rounded border-2 border-gray-300 text-brand-green-500
                         focus:ring-2 focus:ring-brand-green-500/20
                         checked:bg-brand-green-500 checked:border-brand-green-500
                         transition-all duration-200 cursor-pointer accent-brand-green-500"
                />
                <span class="text-sm text-gray-600">
                  Acepto la <a href="/politica-privacidad" target="_blank" class="text-brand-green-600 hover:text-brand-green-700 underline font-medium">politica de tratamiento de datos</a>
                </span>
              </label>
            </div>

            <!-- Boton de envio -->
            <div>
              <button
                type="submit"
                class="w-full py-4 bg-gradient-to-r from-brand-green-500 to-brand-green-600 text-white text-lg font-bold rounded-xl
                       shadow-lg hover:shadow-green-glow-lg hover:-translate-y-0.5 hover:from-brand-green-600 hover:to-brand-green-700
                       transition-all duration-300 flex items-center justify-center gap-3 group"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                <span>Solicitar cita</span>
                <svg class="w-5 h-5 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
                </svg>
              </button>
              <p class="text-center text-xs text-gray-400 mt-2">
                Respuesta en 24h &bull; Sin compromiso
              </p>
            </div>
          </form>

          <div id="hero-form-status" class="hidden mt-4 p-4 rounded-xl text-sm font-medium"></div>
        </div>
      </div>
    )}
  </div>
</section>

<script>
  function initHeroForm() {
    const form = document.getElementById('hero-appointment-form') as HTMLFormElement;
    const status = document.getElementById('hero-form-status');
    if (!form || !status) return;

    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      const formData = new FormData(form);
      const data = Object.fromEntries(formData.entries());

      const submitBtn = form.querySelector('button[type="submit"]') as HTMLButtonElement;
      const originalHTML = submitBtn.innerHTML;
      submitBtn.disabled = true;
      submitBtn.innerHTML = `
        <svg class="w-5 h-5 animate-spin" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
        <span>Enviando...</span>
      `;

      try {
        const response = await fetch('https://connect.pabbly.com/workflow/sendwebhookdata/IjU3NjYwNTZkMDYzNDA0MzY1MjY5NTUzNjUxMzci_pc', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            Name: data.nombre,
            Email: data.email,
            Indicativo: data.indicativo,
            Telefono: data.telefono,
            Especialidad: data.especialidad,
            Formulario: 'Hero Home',
            Pagina: window.location.href
          })
        });

        if (response.ok) {
          status.innerHTML = `
            <div class="flex items-center gap-3">
              <svg class="w-5 h-5 text-brand-green-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <span>Solicitud enviada. Redirigiendo a WhatsApp...</span>
            </div>
          `;
          status.className = 'mt-4 p-4 rounded-xl text-sm font-medium bg-brand-green-50 text-brand-green-800 border border-brand-green-200';
          form.reset();
          setTimeout(() => {
            window.location.href = 'https://wa.me/573224148773?text=Hola%2C%20me%20gustaria%20agendar%20una%20cita%20con%20ustedes';
          }, 1500);
        } else {
          throw new Error('Error en el envio');
        }
      } catch (error) {
        status.innerHTML = `
          <div class="flex items-center gap-3">
            <svg class="w-5 h-5 text-red-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span>Hubo un error al enviar. Por favor intenta de nuevo.</span>
          </div>
        `;
        status.className = 'mt-4 p-4 rounded-xl text-sm font-medium bg-red-50 text-red-800 border border-red-200';
      } finally {
        submitBtn.disabled = false;
        submitBtn.innerHTML = originalHTML;
        status.classList.remove('hidden');
      }
    });
  }

  initHeroForm();
  document.addEventListener('astro:page-load', () => {
    initHeroForm();
  });
</script>
