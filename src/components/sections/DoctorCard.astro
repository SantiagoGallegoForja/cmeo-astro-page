---
interface Props {
  name: string;
  specialty: string;
  image: string;
  specialtyUrl: string;
  appointmentUrl: string;
  accentColor?: 'green' | 'pink';
}

const { name, specialty, image, specialtyUrl, appointmentUrl, accentColor = 'green' } = Astro.props;

const colorClasses = {
  green: {
    border: 'border-brand-green-100 hover:border-brand-green-300',
    glow: 'group-hover:shadow-green-glow-lg',
    accent: 'from-brand-green-500 to-brand-green-400',
    badge: 'bg-brand-green-50 text-brand-green-700 border-brand-green-200',
    btnPrimary: 'from-brand-green-500 to-brand-green-600 hover:shadow-green-glow-lg',
    overlay: 'bg-brand-green-500/10',
  },
  pink: {
    border: 'border-brand-pink-100 hover:border-brand-pink-300',
    glow: 'group-hover:shadow-pink-glow-lg',
    accent: 'from-brand-pink-500 to-brand-pink-400',
    badge: 'bg-brand-pink-50 text-brand-pink-700 border-brand-pink-200',
    btnPrimary: 'from-brand-pink-500 to-brand-pink-600 hover:shadow-pink-glow-lg',
    overlay: 'bg-brand-pink-500/10',
  },
};

const colors = colorClasses[accentColor];
---

<article class:list={[
  'group relative bg-white rounded-3xl overflow-hidden flex flex-col',
  'shadow-soft hover:shadow-soft-xl',
  'border-2 transition-all duration-500 ease-out hover:-translate-y-3',
  colors.border, colors.glow
]}>
  <!-- Image container -->
  <div class="relative overflow-hidden bg-gradient-to-b from-gray-50 to-white">
    <img
      src={image}
      alt={name}
      class="w-full h-auto object-contain transition-all duration-700 ease-out
             group-hover:scale-[1.03]"
      loading="lazy"
    />

    <!-- Subtle overlay on hover -->
    <div class:list={[
      'absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-500',
      colors.overlay
    ]}></div>

    <!-- Status badge -->
    <div class="absolute top-4 left-4">
      <span class:list={[
        'inline-flex items-center gap-1.5 px-3 py-1.5 rounded-full text-xs font-semibold border',
        'shadow-soft backdrop-blur-sm',
        colors.badge
      ]}>
        <span class="w-1.5 h-1.5 rounded-full bg-current animate-pulse"></span>
        Disponible
      </span>
    </div>
  </div>

  <!-- Content -->
  <div class="text-center p-6 lg:p-8 flex-grow flex flex-col relative">
    <!-- Decorative top line -->
    <div class:list={[
      'absolute top-0 left-1/2 -translate-x-1/2 w-20 h-1 rounded-full',
      'bg-gradient-to-r', colors.accent
    ]}></div>

    <h3 class="text-xl lg:text-2xl font-bold text-gray-900 mb-2 mt-2">
      {name}
    </h3>

    <p class="text-base text-gray-500 mb-6 font-medium">
      {specialty}
    </p>

    <div class="flex flex-col sm:flex-row justify-center gap-3 mt-auto">
      <a
        href={specialtyUrl}
        class:list={[
          'inline-flex items-center justify-center gap-2 px-6 py-3',
          'text-sm font-semibold rounded-xl text-white',
          'bg-gradient-to-r shadow-elevation-2',
          'hover:-translate-y-0.5 hover:scale-[1.02]',
          'active:translate-y-0 active:scale-100',
          'transition-all duration-300',
          colors.btnPrimary
        ]}
      >
        Conocer m√°s
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
        </svg>
      </a>
      <a
        href={appointmentUrl}
        class="inline-flex items-center justify-center gap-2 px-6 py-3
               text-sm font-semibold rounded-xl
               bg-white text-gray-700
               border-2 border-gray-200
               shadow-elevation-1 hover:shadow-elevation-3
               hover:border-brand-green-400 hover:text-brand-green-600
               hover:-translate-y-0.5
               active:translate-y-0
               transition-all duration-300"
      >
        Agendar cita
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
        </svg>
      </a>
    </div>
  </div>

  <!-- Corner glow effect -->
  <div class:list={[
    'absolute -bottom-20 -right-20 w-48 h-48 rounded-full blur-3xl',
    'opacity-0 group-hover:opacity-100 transition-opacity duration-500',
    'pointer-events-none',
    accentColor === 'green' ? 'bg-brand-green-500/15' : 'bg-brand-pink-500/15'
  ]}></div>
</article>
