---
interface Props {
  icon: string;
  text: string;
  iconColor?: 'blue' | 'green' | 'pink';
}

const { icon, text, iconColor = 'blue' } = Astro.props;

const colorClasses = {
  blue: {
    icon: 'text-brand-blue-600',
    bg: 'bg-gradient-to-br from-brand-blue-50 to-brand-blue-100',
    glow: 'shadow-blue-glow',
  },
  green: {
    icon: 'text-brand-green-600',
    bg: 'bg-gradient-to-br from-brand-green-50 to-brand-green-100',
    glow: 'shadow-green-glow',
  },
  pink: {
    icon: 'text-brand-pink-600',
    bg: 'bg-gradient-to-br from-brand-pink-50 to-brand-pink-100',
    glow: 'shadow-pink-glow',
  },
};

const colors = colorClasses[iconColor];
---

<div class="group bg-white/80 backdrop-blur-sm rounded-2xl p-8 shadow-soft border border-gray-100/80 hover:shadow-soft-xl hover:-translate-y-1 transition-all duration-300 text-center">
  <div class:list={[
    'w-16 h-16 rounded-2xl flex items-center justify-center mx-auto mb-5 transition-transform duration-300 group-hover:scale-110',
    colors.bg,
    colors.glow
  ]}>
    <i class:list={['text-3xl', colors.icon]}></i>
  </div>
  <p class="text-xl font-bold text-gray-900 leading-snug" set:html={text} />
</div>
