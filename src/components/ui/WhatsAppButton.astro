<!-- Contact Form Modal -->
<div
  id="whatsapp-contact-modal"
  class="fixed inset-0 z-[60] flex items-center justify-center p-4
         bg-black/60 backdrop-blur-sm
         opacity-0 invisible transition-all duration-300"
  aria-hidden="true"
>
  <div
    id="whatsapp-modal-content"
    class="bg-white rounded-3xl shadow-soft-xl w-full max-w-md max-h-[90vh] overflow-y-auto
           transform scale-95 transition-all duration-300
           border border-gray-100"
  >
    <!-- Header -->
    <div class="relative flex justify-between items-center p-6 border-b border-gray-100">
      <!-- Accent line -->
      <div class="absolute top-0 left-6 right-6 h-1 bg-gradient-to-r from-brand-green-500 via-brand-pink-500 to-brand-blue-500 rounded-full"></div>

      <div class="flex items-center gap-3 mt-2">
        <div class="w-10 h-10 rounded-full bg-[#25D366] flex items-center justify-center">
          <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
          </svg>
        </div>
        <h3 class="text-xl font-bold text-gray-900">Contactanos</h3>
      </div>
      <button
        id="whatsapp-close-btn"
        class="w-10 h-10 flex items-center justify-center rounded-xl
               text-gray-400 hover:text-gray-600 hover:bg-gray-100
               transition-all duration-300"
        aria-label="Cerrar"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
    </div>

    <!-- Body -->
    <div class="p-6">
      <!-- Header text -->
      <div class="text-center mb-6">
        <p class="text-gray-600 text-sm leading-relaxed">
          Dejanos tus datos y te contactamos para agendar tu cita
        </p>
        <p class="text-brand-green-600 font-semibold text-sm mt-2">
          Respuesta en menos de 24 horas
        </p>
      </div>

      <!-- Form -->
      <form id="whatsapp-contact-form" class="space-y-4">

        <!-- Nombre -->
        <div class="relative">
          <label class="absolute -top-2.5 left-4 px-2 bg-white text-xs font-medium text-gray-600 z-10">
            Nombre completo <span class="text-brand-pink-500">*</span>
          </label>
          <input
            type="text"
            name="nombre"
            placeholder="Tu nombre"
            required
            autocomplete="name"
            class="w-full px-5 py-3.5 bg-white border-2 border-gray-200 rounded-2xl text-gray-800 placeholder-gray-400
                   transition-all duration-300
                   hover:border-brand-green-300
                   focus:outline-none focus:border-brand-green-500 focus:ring-4 focus:ring-brand-green-100"
          />
        </div>

        <!-- Correo -->
        <div class="relative">
          <label class="absolute -top-2.5 left-4 px-2 bg-white text-xs font-medium text-gray-600 z-10">
            Correo electronico <span class="text-brand-pink-500">*</span>
          </label>
          <input
            type="email"
            name="email"
            placeholder="correo@ejemplo.com"
            required
            autocomplete="email"
            class="w-full px-5 py-3.5 bg-white border-2 border-gray-200 rounded-2xl text-gray-800 placeholder-gray-400
                   transition-all duration-300
                   hover:border-brand-green-300
                   focus:outline-none focus:border-brand-green-500 focus:ring-4 focus:ring-brand-green-100"
          />
        </div>

        <!-- Celular -->
        <div class="relative">
          <label class="absolute -top-2.5 left-4 px-2 bg-white text-xs font-medium text-gray-600 z-10">
            Celular <span class="text-brand-pink-500">*</span>
          </label>
          <div class="flex">
            <select
              name="indicativo"
              class="appearance-none px-2 py-3.5 bg-gray-50 border-2 border-r-0 border-gray-200 rounded-l-2xl text-gray-600 text-sm font-medium cursor-pointer
                     hover:bg-gray-100 focus:outline-none focus:bg-white focus:border-brand-green-500
                     transition-all duration-300"
              style="min-width: 85px;"
            >
              <option value="+57">ðŸ‡¨ðŸ‡´ +57</option>
              <option value="+1">ðŸ‡ºðŸ‡¸ +1</option>
              <option value="+52">ðŸ‡²ðŸ‡½ +52</option>
              <option value="+34">ðŸ‡ªðŸ‡¸ +34</option>
              <option value="+51">ðŸ‡µðŸ‡ª +51</option>
              <option value="+56">ðŸ‡¨ðŸ‡± +56</option>
              <option value="+54">ðŸ‡¦ðŸ‡· +54</option>
              <option value="+593">ðŸ‡ªðŸ‡¨ +593</option>
              <option value="+58">ðŸ‡»ðŸ‡ª +58</option>
              <option value="+507">ðŸ‡µðŸ‡¦ +507</option>
            </select>
            <input
              type="tel"
              name="telefono"
              placeholder="300 123 4567"
              autocomplete="tel"
              class="w-full px-4 py-3.5 bg-white border-2 border-l-0 border-gray-200 rounded-r-2xl text-gray-800 placeholder-gray-400
                     transition-all duration-300
                     hover:border-brand-green-300
                     focus:outline-none focus:border-brand-green-500 focus:ring-4 focus:ring-brand-green-100"
            />
          </div>
        </div>

        <!-- Especialidad -->
        <div class="relative">
          <label class="absolute -top-2.5 left-4 px-2 bg-white text-xs font-medium text-gray-600 z-10">
            Especialidad de interes <span class="text-brand-pink-500">*</span>
          </label>
          <select
            name="especialidad"
            required
            class="w-full px-5 py-3.5 bg-white border-2 border-gray-200 rounded-2xl text-gray-800 appearance-none cursor-pointer
                   transition-all duration-300
                   hover:border-brand-green-300
                   focus:outline-none focus:border-brand-green-500 focus:ring-4 focus:ring-brand-green-100
                   bg-no-repeat"
            style="background-image: url('data:image/svg+xml,%3Csvg xmlns=%27http://www.w3.org/2000/svg%27 fill=%27none%27 viewBox=%270 0 24 24%27 stroke=%27%236b7280%27 stroke-width=%272%27%3E%3Cpath stroke-linecap=%27round%27 stroke-linejoin=%27round%27 d=%27M19 9l-7 7-7-7%27/%3E%3C/svg%3E'); background-size: 1.25rem; background-position: right 1rem center;"
          >
            <option value="" disabled selected>Selecciona una opcion</option>
            <option value="Otorrinolaringologia">Otorrinolaringologia</option>
            <option value="Oftalmologia">Oftalmologia</option>
          </select>
        </div>

        <!-- Checkbox de terminos -->
        <div class="relative">
          <label class="flex items-start gap-2 cursor-pointer">
            <input
              type="checkbox"
              name="acepta_terminos"
              required
              class="mt-0.5 w-4 h-4 rounded border-2 border-gray-300 text-brand-green-500
                     focus:ring-2 focus:ring-brand-green-500/20
                     checked:bg-brand-green-500 checked:border-brand-green-500
                     transition-all duration-200 cursor-pointer accent-brand-green-500"
            />
            <span class="text-xs text-gray-600 leading-relaxed">
              Acepto la <a href="/politica-privacidad" target="_blank" class="text-brand-green-600 hover:text-brand-green-700 underline font-medium">politica de tratamiento de datos</a>
            </span>
          </label>
        </div>

        <!-- Submit Button -->
        <div class="pt-2">
          <button
            type="submit"
            id="whatsapp-submit-btn"
            class="w-full px-6 py-3.5 bg-gradient-to-r from-brand-green-500 to-brand-green-600 text-white font-bold rounded-2xl
                   shadow-lg hover:shadow-xl hover:from-brand-green-600 hover:to-brand-green-700
                   transform hover:-translate-y-0.5 active:translate-y-0
                   transition-all duration-300
                   flex items-center justify-center gap-2 group"
          >
            <svg class="w-5 h-5" data-button-icon fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
